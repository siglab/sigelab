{
  "rules": {    
    "usuarios": {
      ".read": "auth != null",
      "$id":{
        ".read": "auth != null",
        ".write": "(root.child('usuarios').child(auth.uid).child('url').val() == 'nivel2/index.html') || (root.child('usuarios').child(auth.uid).child('url').val() == 'pages/admon.html')",

        //".write": "auth.uid === $id",
         "displayname": {
					".write": "root.child('usuarios').child(auth.uid).child('url').val() == 'pages/admon.html'",
         ".read": "auth != null"
        },
         "email":{
           ".write": "root.child('usuarios').child(auth.uid).child('url').val() == 'pages/admon.html'",
         ".read": "auth != null"
         },
           
         "url": {
          ".write": "(root.child('usuarios').child(auth.uid).child('url').val() == 'nivel2/index.html') || (root.child('usuarios').child(auth.uid).child('url').val() == 'pages/admon.html')",
          ".read": true
         }
      }
    },
    "informacion_laboratorios": {
      ".read": "true",
      ".write": "(root.child('usuarios').child(auth.uid).child('url').val() == 'nivel2/index.html') || (root.child('usuarios').child(auth.uid).child('url').val() == 'pages/admon.html') || (root.child('usuarios').child(auth.uid).child('url').val() == 'nivel2sub/index.html')",
      ".indexOn": [
        "email_univalle",
        "nombre_de_laboratorio",
        "escuela_o_departamento",
        "sede",
        "nombre_responsable",
        "espacio",
        "colaborador"
      ]
    },
    "ensayos": {
      ".read": "true",
      ".write": "(root.child('usuarios').child(auth.uid).child('url').val() == 'nivel2/index.html') || (root.child('usuarios').child(auth.uid).child('url').val() == 'pages/admon.html') || (root.child('usuarios').child(auth.uid).child('url').val() == 'nivel2sub/index.html')",
      ".indexOn": [
        "nombre_laboratorio",
        "prueba_ensayo"
      ]
    },
    "edificios": {
      ".read": "true",
      ".write": "(root.child('usuarios').child(auth.uid).child('url').val() == 'nivel2/index.html') || (root.child('usuarios').child(auth.uid).child('url').val() == 'pages/admon.html') || (root.child('usuarios').child(auth.uid).child('url').val() == 'nivel2sub/index.html')",
      ".indexOn": [
        "edif",
        "cod_georef"
      ]
    },
      "usuariostareasCompletadas":{
        ".read": "auth != null",
          ".write": "(root.child('usuarios').child(auth.uid).child('url').val() == 'nivel2/index.html') || (root.child('usuarios').child(auth.uid).child('url').val() == 'pages/admon.html') || (root.child('usuarios').child(auth.uid).child('url').val() == 'nivel2sub/index.html')"
      },
      "tareas":{
        ".read": "auth != null",
          ".write": "auth != null"
      },
      "pedidos":{
        ".read": "auth != null",
          ".write": "auth != null"
      },
      "costos":{
        ".read": "auth != null",
          ".write": "auth != null"
      }
    
  }
}
